<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/bg"
    tools:context=".ProfileActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_back_button"
        android:src="@android:drawable/ic_media_previous"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Back" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Խմբագրել"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#222222" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/profile_default"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp" />

    <!-- Change Picture Text -->
    <TextView
        android:id="@+id/btnChangePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="փոխել նկարը"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Username Label -->
    <TextView
        android:id="@+id/labelUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChangePicture"
        android:layout_marginTop="40dp"
        android:layout_marginStart="12dp"
        android:text="Օգտանուն"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#444444" />

    <!-- Username Text -->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelUsername"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@drawable/bg_info_field"
        android:padding="12dp" />

    <!-- Email Label -->
    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUsername"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:text="Էլ․ հասցե"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#444444" />

    <!-- Email Text -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelEmail"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@drawable/bg_info_field"
        android:padding="12dp" />

</RelativeLayout>
