<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EB">

    <!-- Fixed Top Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="20sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Quiz Content -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/top_section"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/quiz_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <RelativeLayout
            android:id="@+id/gol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/one"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/gol" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/one"
                android:paddingStart="15dp"
                android:gravity="center"
                android:text="Սկետչ 123" />

            <Button
                android:id="@+id/yt_gol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/kartoshka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/two"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/kartoshka" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/two"
                android:paddingStart="15dp"
                android:gravity="center"
                android:text="Կարտոշկա" />

            <Button
                android:id="@+id/yt_kartoshka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dzmeruk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/three"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/dzmeruk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/three"
                android:paddingStart="15dp"
                android:gravity="center"
                android:text="Սկետչ 234" />

            <Button
                android:id="@+id/yt_dzmeruk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tupoy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/four"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/tupoy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/four"
                android:paddingStart="15dp"
                android:gravity="center"
                android:text="Սկետչ 147" />

            <Button
                android:id="@+id/yt_tupoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bordo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/five"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/bordo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/five"
                android:paddingStart="15dp"
                android:gravity="center"
                android:text="Սկետչ 432" />

            <Button
                android:id="@+id/yt_bordo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/azat_goti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/six"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/azatgoti" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/six"
                android:paddingStart="15dp"
                android:gravity="center"
                android:text="Ազատ գոտի" />

            <Button
                android:id="@+id/yt_azat_goti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ankoch_hyur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/seven"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/ankoch_hyur" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/seven"
                android:layout_toStartOf="@id/yt_ankoch_hyur"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Անկոչ հյուրերը թաղման ժամանակ" />


            <Button
                android:id="@+id/yt_ankoch_hyur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bodybuilder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/eight"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/bodybuilder" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/eight"
                android:layout_toStartOf="@id/yt_bodybuilder"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Բոդիբիլդեր աղջիկները" />


            <Button
                android:id="@+id/yt_bodybuilder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/kisabac_debatner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/nine"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/kisabac_debatner" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/nine"
                android:layout_toStartOf="@id/yt_kisabac_debatner"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Կիսաբաց դեբատներ" />


            <Button
                android:id="@+id/yt_kisabac_debatner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nkarich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ten"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/nkarich" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ten"
                android:layout_toStartOf="@id/yt_nkarich"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Նկարիչ Ճոճոլ Ծկուլ" />

            <Button
                android:id="@+id/yt_nkarich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/oligarkh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/eleven"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/oligarkh" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/eleven"
                android:layout_toStartOf="@id/yt_oligarkh"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Օլիգարխի տղաներ" />

            <Button
                android:id="@+id/yt_oligarkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/arammp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/el_hashvel_chgitem"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/aram" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/el_hashvel_chgitem"
                android:layout_toStartOf="@id/yt_arammp3"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Եկատերին Հարցազրույց Արամ MP3-ի հետ" />

            <Button
                android:id="@+id/yt_arammp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/avtovtar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="15dp">

            <ImageView
                android:id="@+id/avtovtar_img"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/avtovtar" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/avtovtar_img"
                android:layout_toStartOf="@id/yt_avtovtar"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Ավտովթար" />

            <Button
                android:id="@+id/yt_avtovtar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Նայել" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

