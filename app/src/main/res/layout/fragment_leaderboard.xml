<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6EF"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/leaderboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Առաջատարների աղյուսակ"
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="#0D0D0D"
        android:layout_gravity="center_horizontal" />

    <!-- Top 3 podium -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_marginTop="32dp"
        android:weightSum="3">

        <!-- 2nd Place -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/blue_gradient"
            android:layout_margin="4dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profImage2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_person"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/secondName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/secondPoints"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="points"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- 1st Place -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/red_gradient"
            android:layout_margin="4dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profImage1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/baseline_person"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/firstName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/firstPoints"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="points"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- 3rd Place -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/purple_gradient"
            android:layout_margin="4dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profImage3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_person"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/thirdName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/thirdPoints"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="points"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable list for 4th and lower -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />
</LinearLayout>
